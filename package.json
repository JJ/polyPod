{
  "name": "@polypoly-eu/port-authority",
  "version": "0.2.1",
  "description": "A typed view on communication through ports",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf tsconfig.tsbuildinfo dist && tsc --emitDeclarationOnly && rollup -c",
    "dev": "tsc --watch --incremental",
    "eslint": "eslint src --ext .ts",
    "coverage": "nyc ts-mocha src/tests/{node,universal}/**.test.ts",
    "test": "npm run test:browser && npm run test:node",
    "test:browser": "karma start",
    "test:node": "ts-mocha src/tests/{node,universal}/**.test.ts",
    "docs": "typedoc",
    "dev:docs": "chokidar 'src/**/*' -c 'npm run docs'"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polypoly-eu/port-authority.git"
  },
  "author": "Lars Hupel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/polypoly-eu/port-authority/issues"
  },
  "homepage": "https://github.com/polypoly-eu/port-authority#readme",
  "dependencies": {
    "@polypoly-eu/bubblewrap": "^0.1.2",
    "@types/body-parser": "^1.19.0",
    "@types/connect": "^3.4.33",
    "@types/node": "^14.6.4"
  },
  "peerDependencies": {
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "connect": "^3.7.0",
    "fast-check": "^2.3.0"
  },
  "devDependencies": {
    "@polypoly-eu/eslint-config-polypoly": "0.0.4",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-sucrase": "^3.1.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/promise-timeout": "^1.3.0",
    "body-parser": "^1.19.0",
    "connect": "^3.7.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chokidar-cli": "^2.1.0",
    "eslint": "^7.9.0",
    "fast-check": "^2.3.0",
    "karma": "^5.2.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.5",
    "karma-spec-reporter": "^0.0.32",
    "mocha": "^8.1.3",
    "node-fetch": "^2.6.1",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "promise-timeout": "^1.3.0",
    "puppeteer": "^5.3.1",
    "puppeteer-firefox": "^0.5.1",
    "rollup": "^2.28.2",
    "ts-mocha": "^7.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  }
}
