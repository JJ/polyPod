  "devDependencies": {
    "@polypoly-eu/eslint-config-polypoly": "0.0.2",
    "@rollup/plugin-sucrase": "^3.1.0",
    "@types/jest": "^26.0.15",
    "chokidar-cli": "^2.1.0",
    "eslint": "^7.12.0",
    "jest": "^25.5.4",
    "prettier": "^2.1.2",
    "rollup": "^2.32.1",
    "ts-jest": "^25.5.1",
    "typedoc": "^0.19.2",
