{
  "name": "@polypoly-eu/port-authority",
  "version": "0.1.0",
  "description": "A typed view on communication through ports",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "scripts": {
    "build": "rm -rf tsconfig.tsbuildinfo dist && tsc --emitDeclarationOnly && rollup -c",
    "dev": "tsc --watch --incremental",
    "eslint": "eslint src --ext .ts",
    "coverage": "nyc ts-mocha src/tests/{node,universal}/**.test.ts",
    "test": "npm run test:browser && npm run test:node",
    "test:browser": "karma start",
    "test:node": "ts-mocha src/tests/{node,universal}/**.test.ts",
    "docs": "typedoc",
    "dev:docs": "chokidar 'src/**/*' -c 'npm run docs'"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polypoly-eu/port-authority.git"
  },
  "author": "Lars Hupel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/polypoly-eu/port-authority/issues"
  },
  "homepage": "https://github.com/polypoly-eu/port-authority#readme",
  "dependencies": {
    "@polypoly-eu/bubblewrap": "^0.1.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.13"
  },
  "peerDependencies": {
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "fast-check": "^1.25.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@rollup/plugin-sucrase": "^3.0.2",
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/promise-timeout": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chokidar-cli": "^2.1.0",
    "eslint": "^6.8.0",
    "express": "^4.17.1",
    "fast-check": "^1.25.1",
    "karma": "^5.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.5",
    "karma-spec-reporter": "^0.0.32",
    "mocha": "^7.2.0",
    "node-fetch": "^2.6.0",
    "nyc": "^15.1.0",
    "promise-timeout": "^1.3.0",
    "puppeteer": "^3.3.0",
    "puppeteer-firefox": "^0.5.1",
    "rollup": "^2.15.0",
    "ts-mocha": "^7.0.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.5"
  }
}
