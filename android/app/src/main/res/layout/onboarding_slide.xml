<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >

        <TextView
            android:id="@+id/headline_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="400dp"
            android:fontFamily="@font/polydisplay_semi_1_0"
            android:textSize="36dp"
            android:textColor="#0f1938" />

        <TextView
            android:id="@+id/headline_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="400dp"
            android:fontFamily="@font/jost_medium"
            android:textSize="36dp"
            android:textColor="#0f1938" />

        <TextView
            android:id="@+id/body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:maxWidth="400dp"
            android:fontFamily="@font/jost_regular"
            android:textSize="24dp"
            android:textColor="#0f1938" />

    </LinearLayout>

    <Button
        android:id="@+id/end_onboarding_button"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:text="@string/button_end_onboarding"
        android:textColor="#0f1938"
        android:background="#fb8a89"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/content_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
